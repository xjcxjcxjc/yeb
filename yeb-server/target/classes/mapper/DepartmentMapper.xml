<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xjc.mapper.DepartmentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="Department">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="parentId" property="parentId" />
        <result column="depPath" property="depPath" />
        <result column="enabled" property="enabled" />
        <result column="isParent" property="isParent" />
    </resultMap>

    <resultMap id="DepartmentWithChildren" type="Department">
<!--        手动添加 -->
        <result property="id" column="id"></result>
        <collection property="children" ofType="Department"
                    select="com.xjc.mapper.DepartmentMapper.getAllDepartment" column="id">
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, parentId, depPath, enabled, isParent
    </sql>


    <select id="getAllDepartment" resultMap="DepartmentWithChildren"
    >
        select
        <include refid="Base_Column_List"></include>
        from t_department
        where parentId=#{parentId}
    </select>


    <select id="addDepartment" statementType="CALLABLE">
        call myAddDep(#{name,mode=IN,jdbcType=VARCHAR},
        #{parentId,mode=IN,jdbcType=INTEGER},
        #{enabled,mode=IN,jdbcType=BOOLEAN},
        #{result,mode=OUT,jdbcType=INTEGER},
        #{id,mode=OUT,jdbcType=INTEGER})
    </select>

    <select id="deleteDep" statementType="CALLABLE">
        call myDeleteDep(#{id,mode=IN,jdbcType=INTEGER},#{result,mode=OUT,jdbcType=INTEGER})
    </select>


</mapper>









